WindowManager:
    LoginScreen:
    MarketScreen:
    BuyingScreen:
    AccountCreation:
    ListingsScreen:
    HistoryScreen:

<HistoryScreen>:
    name: "history screen"

    MDBoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

    MDCard:
        size_hint: None, None
        size: 600,500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'
        MDRoundFlatButton:
            text: "leave"
            on_release: app.root.transition.direction = "right"
            on_release: app.root.current = "buying screen"

<ListingsScreen>:
    name: "listings screen"
    MDBoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

    MDCard:
        size_hint: None, None
        size: 600,500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'
        ScrollView:
            MDRoundFlatButton:
                text: "leave"
                on_release: app.root.transition.direction = "right"
                on_release: app.root.current = "buying screen"
            
<AccountCreation>:
    name: "account screen"
    MDBoxLayout:
        Image:
            source:'pictures/neon.jpeg'
            allow_stretch: True
            keep_ratio: False
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: hello_label
            text: "HELLO NEW USER"
            font_size: 28
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextFieldRound:
            id: new_use
            hint_text: "Name"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: new_password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True
        
        MDTextFieldRound:
            id: new_password_checker
            hint_text: "password_again"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "CREATE ACCOUNT"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release: root.account_made_in_db()
            on_release: app.root.transition.direction = "left" 
            on_release: app.root.current = "market screen" if root.auth() else "account screen"
        
        MDRoundFlatButton:
            text: "EXIT"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release: app.root.transition.direction = "right"
            on_release: app.root.current = "login screen"

                     
<BuyingScreen>:
    name: "buying screen"
    MDBoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        Image:
            source:'pictures/neon.jpeg'
            allow_stretch: True
            keep_ratio: False
        

    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDRoundFlatButton:
            text: "History"
            font_size: 12
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release: app.root.transition.direction = "left"
            on_release: app.root.current = "history screen"

        MDRoundFlatButton:
            text: "Market"
            font_size: 12
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release: app.root.transition.direction = "left"
            on_release: app.root.current = "listings screen"

        MDRoundFlatButton:
            text: "Help Desk"
            font_size: 12
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDRoundFlatButton:
            text: "Leave Market"
            font_size: 12
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release: app.root.transition.direction = "right"
            on_release: app.root.current = "market screen"

<MarketScreen>:
    name: "market screen"
    
    MDBoxLayout:
        Image:
            source:'pictures/neon.jpeg'
            allow_stretch: True
            keep_ratio: False
       

    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'
        MDRoundFlatButton:
            text: 'Shop'
            on_release: app.root.transition.direction = "left"
            on_release: app.root.current = "listings screen"
            
        MDRoundFlatButton:
            text: 'logout'
            on_release: app.root.transition.direction = "right"
            on_release: app.root.current = "login screen"

<LoginScreen>:
    name: "login screen"
    MDBoxLayout:
        Image:
            source:'pictures/neon.jpeg'
            allow_stretch: True
            keep_ratio: False
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: "WELCOME"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextFieldRound:
            id: user
            hint_text: "Name"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release: app.root.transition.direction = "left"
            on_release: app.root.current = "market screen" if root.auth() else "account screen"
            on_release: root.login_to_db()
        
        MDRoundFlatButton:
            text: "NEED AN ACCOUNT?"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release: app.root.transition.direction = "left"
            on_release: app.root.current = "account screen"
                     

        Widget:
            size_hint_y: None
            height: 10
